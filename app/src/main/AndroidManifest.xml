<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ee461l.stockapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".LandingPage"
            android:label="@string/landing_page"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SearchStocks"
            android:label="@string/search_stocks"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SearchResultsDisplay"
            android:label="@string/search_results"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FinancialNews"
            android:label="@string/financial_news"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FavoritesList"
            android:label="@string/favorites_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FavoriteDisplay"
            android:label="@string/fav_display"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".CryptoList" />
        <activity android:name=".CryptoDisplay"></activity>
    </application>

</manifest>