<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CryptoDisplay">

    <Button
        android:id="@+id/crypto_go_home"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:textSize="12sp"
        android:onClick="gotoHome"
        android:text="@string/main" />

    <Button
        android:id="@+id/go_back_crypto"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toStartOf="@id/go_back_crypto"
        android:layout_margin="8dp"
        android:textSize="12sp"
        android:onClick="goBackToCryptoList"
        android:text="@string/crypto_list" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/crypto_display"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/go_back_crypto"
        android:layout_margin="16dp" />

</RelativeLayout>